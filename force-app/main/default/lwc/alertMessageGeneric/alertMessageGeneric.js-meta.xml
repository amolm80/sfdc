<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>  
        <targetConfig targets="lightning__RecordPage">
            <property name="txtTitle" type="String" default="Error" label="Message Title"/>
            <property required="true" name="txtMessage" type="String" default="" label="Message"/>
            <property label="Message Type" name="varient" type="String" datasource="error,warning,success,info" default="error"/>
            <property required="true" label="Text Field Value to check" name="fieldValue" type="String"  default="test"/>
            <property required="true" label="Field Name" name="fieldName" type="String"  default="Name"/>

        </targetConfig>
    </targetConfigs>    
</LightningComponentBundle>